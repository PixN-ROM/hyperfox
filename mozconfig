#######################################
## SaberFox Build Configuration file ##
#######################################
# SaberFox Version
export MAJOR=1
export BETA=0
export ALPHA=0

# SaberFox Config
ac_add_options --enable-application=mobile/android
ac_add_options --target=arm-linux-androideabi
ac_add_options --with-android-ndk=$HOME/.mozbuild/android-ndk-r10e
ac_add_options --with-android-sdk=$HOME/.mozbuild/android-sdk-linux/platforms/android-22
ac_add_options --disable-debug
ac_add_options --enable-optimize=-O3
ac_add_options --enable-release

# SaberMod ARM Toolchain
ac_add_options --with-android-toolchain=$HOME/arm-linux-androideabi-4.9

# Optimization Flags
export CFLAGS="-O3 -fopenmp -fgraphite -fgraphite-identity -g0 -pipe -fira-loop-pressure -fira-hoist-pressure -fipa-sra -fgcse-sm -fgcse-after-reload"
export CPPFLAGS="-O3 -fopenmp -fgraphite -fgraphite-identity -g0 -pipe -fira-loop-pressure -fira-hoist-pressure -fipa-sra -fgcse-sm -fgcse-after-reload"
export LDFLAGS="-O3 -flto=4 -fopenmp -g0 -pipe"

